<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.mini_projet.controller.AvionController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <top>
        <ToolBar styleClass="tool-bar" prefHeight="60.0">
            <Label text="Aircraft Management" styleClass="header-label" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add Aircraft" onAction="#handleAddAircraft" styleClass="primary-button" prefHeight="40.0" prefWidth="150.0"/>
        </ToolBar>
    </top>
    <center>
        <VBox spacing="20" styleClass="content-card" style="-fx-padding: 30;">
            <TableView fx:id="aircraftTable" styleClass="table-view" prefHeight="600.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="100.0">
                        <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colmodel" text="Model" prefWidth="300.0">
                        <cellValueFactory><PropertyValueFactory property="model"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="capacity" text="Capacity" prefWidth="150.0">
                        <cellValueFactory><PropertyValueFactory property="nbPlace"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colsatuts" text="Status" prefWidth="200.0">
                        <cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="actionCol" text="Actions" prefWidth="250.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>