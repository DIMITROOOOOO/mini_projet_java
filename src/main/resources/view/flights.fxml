<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mini_projet.controller.FlightsController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <top>
        <ToolBar styleClass="tool-bar" prefHeight="64.0">
            <Label text="Flight Management" styleClass="header-label" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add Flight" onAction="#handleAddFlight" styleClass="primary-button" prefHeight="40.0" prefWidth="160.0"/>
        </ToolBar>
    </top>
    <center>
        <VBox spacing="24" styleClass="content-card" style="-fx-padding: 32;">
            <!-- Stats Cards Section -->
            <HBox spacing="24" styleClass="card" style="-fx-padding: 16; -fx-background-radius: 12; -fx-border-radius: 12;">
                <VBox styleClass="card, stats" alignment="CENTER">
                    <Label text="Total Flights" styleClass="label"/>
                    <Label text="51" styleClass="label" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox styleClass="card, stats" alignment="CENTER">
                    <Label text="On Time" styleClass="label"/>
                    <Label text="40" styleClass="label" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <ProgressBar progress="0.78" prefWidth="150.0" styleClass="progress-bar, on-time"/>
                </VBox>
                <VBox styleClass="card, stats" alignment="CENTER">
                    <Label text="Delayed" styleClass="label"/>
                    <Label text="11" styleClass="label" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <ProgressBar progress="0.22" prefWidth="150.0" styleClass="progress-bar, delayed"/>
                </VBox>
            </HBox>
            <!-- Flights Table -->
            <TableView fx:id="flightsTable" styleClass="table-view" prefHeight="500.0">
                <columns>
                    <TableColumn fx:id="colFlightNumber" text="Flight No" prefWidth="120.0"/>
                    <TableColumn fx:id="colDestination" text="Destination" prefWidth="250.0"/>
                    <TableColumn fx:id="colAircraft" text="Aircraft" prefWidth="300.0"/>
                    <TableColumn fx:id="colCrew" text="Crew" prefWidth="250.0"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="150.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>