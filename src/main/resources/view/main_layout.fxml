<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mini_projet.controller.DashboardController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <top>
        <ToolBar styleClass="tool-bar" prefHeight="64.0">
            <HBox spacing="16" alignment="CENTER_LEFT">
                <Label text="Tunisair Gestion des Vols" styleClass="header-label"/>
                <Label text="Dashboard" styleClass="label" style="-fx-font-size: 18px; -fx-text-fill: #64748b;"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Label text="Admin User" styleClass="label" style="-fx-font-size: 14px; -fx-font-weight: 600;"/>
                <Button onAction="#handleLogout" text="Logout" styleClass="primary-button" prefHeight="40.0" prefWidth="120.0"/>
            </HBox>
        </ToolBar>
    </top>
    <left>
        <VBox spacing="12" styleClass="sidebar" prefWidth="240.0" style="-fx-padding: 24 12 24 12;">
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 24 0;">
                <Label text="✈️ Tunisair" styleClass="header-label" style="-fx-font-size: 20px;"/>
            </HBox>
            <Button onAction="#goToFlights" text="✈️ Manage Flights" styleClass="sidebar-button" prefHeight="48.0" alignment="CENTER_LEFT"/>
            <Button onAction="#goToAircraft" text="🛩️ Manage Aircraft" styleClass="sidebar-button" prefHeight="48.0" alignment="CENTER_LEFT"/>
            <Button onAction="#goToCrew" text="👥 Manage Crew" styleClass="sidebar-button" prefHeight="48.0" alignment="CENTER_LEFT"/>
            <Button onAction="#goToSearch" text="🔍 Search Flights" styleClass="sidebar-button" prefHeight="48.0" alignment="CENTER_LEFT"/>
            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="24" styleClass="content-card" style="-fx-padding: 32;">
            <Label text="Welcome to Your Dashboard" styleClass="header-label" style="-fx-font-size: 28px;"/>
            <HBox spacing="24" styleClass="card" style="-fx-padding: 24; -fx-background-radius: 16; -fx-border-radius: 16; -fx-background-color: linear-gradient(to bottom right, #2563eb, #7c3aed);">
                <VBox spacing="12">
                    <Label text="Tunisair Gestion des Vols" styleClass="label" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
                    <Label text="Manage your flights, aircraft, and crew with ease." styleClass="label" style="-fx-font-size: 16px; -fx-text-fill: #e2e8f0;"/>
                    <Button text="Get Started" onAction="#goToFlights" styleClass="primary-button" prefHeight="40.0" prefWidth="160.0"/>
                </VBox>
            </HBox>
            <StackPane fx:id="contentArea" styleClass="content-card" prefHeight="400.0" style="-fx-padding: 24;"/>
        </VBox>
    </center>
</BorderPane>